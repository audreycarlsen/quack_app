<div class='container'>

  <div class="row">
    <div class="col-md-3">
      <%= render 'form' %>
    </div>

    <div class="col-md-3">
      <% Quack.all.reverse.each do |quack| %>
        <p>
          <strong><%= quack.author %></strong>
          <br>
          <%= quack.body %>
          <br>
          <%= link_to 'Details', quack_path(quack.id) %>
          <br><small><%= time_ago_in_words(quack.created_at) %></small>
        </p>
      <% end %>
    </div>
  </div>

</div>